<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".UpdateActivity">

    <TextView
        android:id="@+id/TextView_date_u"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apr 5,2020"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="@color/colorAccent"/>


    <TextView
        android:id="@+id/TextView_total_u"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: 30"
        android:textSize="20dp"
        android:layout_below="@id/TextView_date_u"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView_stream_u"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CSE 2ND"
        android:textSize="20dp"
        android:layout_below="@id/TextView_date_u"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/EditText_roll_u"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Roll"
        android:layout_below="@id/TextView_date_u"
        android:textSize="20dp"
        android:textAlignment="center"
        android:inputType="number"
        android:layout_margin="100dp"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/Button_apsend_u"
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:text="Apsent"
        android:layout_margin="10dp"
        android:textSize="25dp" />

    <Button
        android:id="@+id/Button_present_u"
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Present"
        android:layout_margin="10dp"
        android:textSize="25dp" />


</RelativeLayout>